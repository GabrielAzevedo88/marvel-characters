<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onRetry"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="38dp">

        <TextView
            android:id="@+id/lErro_tvTitle"
            style="@style/appHighlightedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_title" />

        <TextView
            android:id="@+id/lErro_tvSubtitle"
            style="@style/appNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_subtitle" />

        <TextView
            android:id="@+id/lErro_tvRetry"
            style="@style/appHighlightedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/red_marvel"
            android:textColor="@color/white"
            android:onClick="@{onRetry}"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/error_button_text" />

    </LinearLayout>


</layout>

