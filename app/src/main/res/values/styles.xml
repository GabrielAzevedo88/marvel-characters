<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMarvel" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/red_marvel</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="appNormalText">
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textColor">@color/red_marvel</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="appHighlightedText">
        <item name="android:fontFamily">@font/marvel_bold</item>
        <item name="android:textColor">@color/red_marvel</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
