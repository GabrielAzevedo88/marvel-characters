<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_marvel</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMarvel" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/red_marvel</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextAppearance.Test.CollapsingToolbar.Expanded" parent="">
        <item name="fontFamily">@font/marvel_bold</item>
        <item name="android:fontFamily">@font/marvel_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextAppearance.Test.CollapsingToolbar.Collapsed" parent="TextAppearance.Test.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/marvel</item>
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/red_marvel</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorControlHighlight">@color/red_marvel</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="appNormalText">
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textColor">@color/red_marvel</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="appHighlightedText">
        <item name="android:fontFamily">@font/marvel_bold</item>
        <item name="android:textColor">@color/red_marvel</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
